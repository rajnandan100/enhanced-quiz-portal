# =======================
# DEVELOPMENT SETTINGS
# =======================
# QP-DEV-001: Development Configuration
NODE_ENV=development
DEBUG_MODE=true
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=sample_session_secret_key_for_development_only
SESSION_TIMEOUT=86400000

# =======================
# ADMIN CONFIGURATION
# =======================
# QP-ADMIN-001: Admin Panel Configuration
ADMIN_EMAIL=admin@quizportal.com
ADMIN_PASSWORD=SecureAdminPassword123!
ADMIN_JWT_SECRET=sample_admin_jwt_secret_123456789abcdef

# Super Admin (first user setup)
SUPER_ADMIN_EMAIL=superadmin@quizportal.com
SUPER_ADMIN_PASSWORD=SuperSecurePassword123!

# =======================
# FEATURE FLAGS
# =======================
# QP-FEATURE-001: Feature Toggle Configuration
ENABLE_PREMIUM_FEATURES=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true
ENABLE_AD_NETWORKS=true
ENABLE_ANALYTICS=true

# =======================
# BACKUP CONFIGURATION
# =======================
# QP-BACKUP-001: Backup Settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# =======================
# SECURITY SETTINGS
# =======================
# QP-SECURITY-001: Security Configuration
ENCRYPTION_KEY=sample_encryption_key_32_chars_min
JWT_EXPIRY=24h
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBER=true

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =======================
# LOGGING CONFIGURATION
# =======================
# QP-LOG-001: Logging Settings
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Error Reporting
SENTRY_DSN=https://sample-sentry-dsn@sentry.io/123456

# =======================
# NOTES FOR SETUP
# =======================
# 1. Copy this file to .env in your root directory
# 2. Update all sample values with your actual API keys
# 3. Never commit .env file to version control
# 4. Restart your application after changing environment variables
# 5. For production, use your platform's environment variable settings